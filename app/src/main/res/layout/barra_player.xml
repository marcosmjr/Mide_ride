<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/barraPlayer"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/barra_player" />

    <ImageButton
        android:id="@+id/iFavoriteButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:elevation="10dp"
        android:layout_marginStart="32dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/barraPlayer"
        app:layout_constraintStart_toStartOf="@+id/barraPlayer"
        app:layout_constraintTop_toTopOf="@+id/barraPlayer"
        app:srcCompat="@drawable/nfavorito" />

    <ImageButton
        android:id="@+id/iAnteriorButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:elevation="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/barraPlayer"
        app:layout_constraintEnd_toStartOf="@+id/iPlayButton"
        app:layout_constraintTop_toTopOf="@+id/barraPlayer"
        app:srcCompat="@drawable/anterior" />

    <ImageButton
        android:id="@+id/iPlayButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/play"
        android:scaleType="fitCenter"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/barraPlayer"
        app:layout_constraintEnd_toStartOf="@+id/iNauralButton"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="@+id/iFavoriteButton"
        app:layout_constraintTop_toTopOf="@+id/barraPlayer"
        app:layout_constraintVertical_bias="0.65" />

    <ImageButton
        android:id="@+id/iProximaButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:elevation="10dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iPlayButton"
        app:layout_constraintTop_toTopOf="@+id/barraPlayer"
        app:srcCompat="@drawable/proxima" />

    <ImageButton
        android:id="@+id/iNauralButton"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginEnd="32dp"
        android:background="@null"
        android:elevation="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/barraPlayer"
        app:layout_constraintEnd_toEndOf="@+id/barraPlayer"
        app:layout_constraintTop_toTopOf="@+id/barraPlayer"
        app:srcCompat="@drawable/binaural_beat" />

</androidx.constraintlayout.widget.ConstraintLayout>